# ── Groq (Required) ──────────────────────────────────────────────
GROQ_API_KEY=gsk_your_key_here

# ── Database ──────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://npe_user:npe_pass@localhost:5432/npe_db

# ── Redis ─────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── Kafka ─────────────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ── App Settings ──────────────────────────────────────────────────
ENV=development
LOG_LEVEL=INFO
API_SECRET_KEY=change_me_in_production

# ── AI Scorer Settings ────────────────────────────────────────────
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TIMEOUT_SECONDS=1.5
AI_SCORE_NOW_THRESHOLD=0.75
AI_SCORE_LATER_THRESHOLD=0.40

# ── Fatigue Defaults ──────────────────────────────────────────────
DEFAULT_HOURLY_CAP=5
DEFAULT_DAILY_CAP=20
DEFAULT_COOLDOWN_SECONDS=3600

# ── Dedup Settings ────────────────────────────────────────────────
EXACT_DEDUP_TTL_SECONDS=3600
NEAR_DEDUP_TTL_SECONDS=86400
LSH_JACCARD_THRESHOLD=0.85
LSH_NUM_PERM=128
